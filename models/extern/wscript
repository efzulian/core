#! /usr/bin/env python
# vim : set fileencoding=utf-8 expandtab noai ts=4 sw=4 filetype=python :
import os
top = '../..'

def build(bld):
  extern = [
    'LEON3/simulatorSources/leon3.funcat',
    'LEON3/simulatorSources/leon3.funclt',
  ]

  if os.path.exists(os.path.join(bld.path.abspath(), "SpaceWire")):
    extern += ['SpaceWire']

  bld.recurse(extern)
