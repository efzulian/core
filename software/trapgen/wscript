#! /usr/bin/env python
# vim : set fileencoding=utf-8 expandtab noai ts=4 sw=4 filetype=python :
top = '../..'

def build(bld):
  # AES.sparc
  bld(
     features     = 'c cprogram sparc',
     target       = 'aes.sparc',
     cflags       = '-static -g -O1 -mno-fpu',
     linkflags    = '-static -g -O1 -mno-fpu',
     lib          = 'm',
     source       = ['AES.c'],
     install_path = None,
  )

  ahbmemtgen = bld.get_tgen_by_name("aes.sparc")
  ahbmem     = ahbmemtgen.path.find_or_declare("aes.sparc")
  bld(
      features    = 'systest',
      system      = 'leon3mp.platform',
      rom         = 'sdram.prom',
      ram         = 'aes.sparc',
      args        = '--option conf.ahbmem.elf=%s' % (ahbmem.abspath())
  )
  
  bld(
      features    = 'systest',
      system      = 'leon3mp.platform',
      rom         = 'sdram.prom',
      ram         = 'aes.sparc',
      at       = True,
  )
  
  # bcnt.sparc
  bld(
     features     = 'c cprogram sparc',
     target       = 'bcnt.sparc',
     cflags       = '-static -g -O1 -mno-fpu',
     linkflags    = '-static -g -O1 -mno-fpu',
     lib          = 'm',
     source       = ['bcnt.c'],
     install_path = None,
  )
  
  bld(
      features    = 'systest',
      system      = 'leon3mp.platform',
      rom         = 'sdram.prom',
      ram         = 'bcnt.sparc',
  )
  
  bld(
      features    = 'systest',
      system      = 'leon3mp.platform',
      rom         = 'sdram.prom',
      ram         = 'bcnt.sparc',
      at          = True,
  )

  # blit.sparc
